@model Candidate


<div>

    <h3 class="display-4">Congratulations @Model.FullName</h3>
    <p class="lead">Your application has been <mark>accepted</mark></p>
    <p class="lead">Thanks for your application</p>
    <hr>
    <blockquote class="blockquote">
        you have enrolled to @Model.SelectedCourse course
    </blockquote>
    <p class="text-muted"> you are apply at @Model.ApplyAt</p>

    <div class="btn-group">

        <a   asp-action="Index" asp-controller="Course"  class="btn btn-outline-success">Applications</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</div>